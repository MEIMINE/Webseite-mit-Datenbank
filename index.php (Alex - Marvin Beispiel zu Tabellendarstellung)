<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <title>Mitarbeiterliste</title>
</head>
<body>
    <h1>Mitarbeiterliste</h1>
    <table border="1">
        <thead>
            <tr>
                <th>Vorname</th>
                <th>Nachname</th>
                <th>Beruf</th>
                <th>Gehalt (€)</th>
            </tr>
        </thead>
        <tbody>
            <?php
            $servername = "localhost";
            $username = "root";  // Ihr MySQL-Benutzername
            $password = "";      // Ihr MySQL-Passwort
            $dbname = "projekteinsaetze";
 
            // Verbindung zur Datenbank herstellen
            $conn = new mysqli($servername, $username, $password, $dbname);
 
            // Verbindung überprüfen
            if ($conn->connect_error) {
                die("Connection failed: " . $conn->connect_error);
            }
 
            $sql = "SELECT PersNr, Nachname, Vorname, Beruf, Round(Gehalt,0) as Gerundeter_Gehalt FROM mitarbeiter";
            $result = $conn->query($sql);
 
            if ($result->num_rows > 0) {
                // Daten aus jeder Zeile ausgeben
                while($row = $result->fetch_assoc()) {
                    echo "<tr>";
                    echo "<td>" . htmlspecialchars($row['Vorname']) . "</td>";
                    echo "<td>" . htmlspecialchars($row['Nachname']) . "</td>";
                    echo "<td>" . htmlspecialchars($row['Beruf']) . "</td>";
                    echo "<td>" . htmlspecialchars($row['Gerundeter_Gehalt']) . "€</td>";
                    echo "</tr>";
                }
            } else {
                echo "<tr><td colspan='4'>Keine Ergebnisse</td></tr>";
            }
            $conn->close();
            ?>
        </tbody>
    </table>
</body>
</html>